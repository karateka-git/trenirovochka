<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ActionButton" parent="@style/Widget.Material3.Button">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:minHeight">46dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">4dp</item>
    </style>

    <style name="ActionButton.Primary">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/MerriweatherRegular.OnPrimary.18</item>
    </style>

    <style name="ActionButton.Secondary">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/MerriweatherRegular.OnSecondary.18</item>
    </style>

    <style name="ProgressHorizontalIndicator">
        <item name="trackColor">?attr/colorSurfaceVariant</item>
        <item name="indicatorColor">?attr/colorSecondary</item>
    </style>
</resources>